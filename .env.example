# Aster DEX Grid Trading Bot - Environment Variables
# Copy this file to .env and fill in your credentials

# =============================================================================
# API CREDENTIALS (Required)
# =============================================================================
# Get these from Aster DEX account settings
ASTER_API_KEY=your_api_key_here
ASTER_API_SECRET=your_api_secret_here

# =============================================================================
# OPERATION MODE
# =============================================================================
# Set to 'true' to simulate trades without executing (recommended for testing)
DRY_RUN=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# TELEGRAM NOTIFICATIONS (Optional but recommended)
# =============================================================================
# 1. Create bot: Message @BotFather on Telegram, send /newbot
# 2. Get chat ID: Message @userinfobot on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
